    <!-- End: Main -->
    <style>
        /*demo styles*/

        html,
        body.admin-modals-page {
            margin-right: 0 !important;
        }

        body {
            min-height: 2000px;
            overflow: visible;
        }

        .custom-nav-animation li {
            display: none;
        }

            .custom-nav-animation li.animated {
                display: block;
            }
        /* nav fixed settings */

        ul.tray-nav.affix {
            width: 319px;
            top: 80px;
        }


        /*INICIO ESTILO NOTIFICACIONES KENDO*/
        .demo-section p {
            margin: 3px 0 20px;
            line-height: 50px;
        }

        .demo-section .k-button {
            width: 250px;
        }

        .k-notification {
            border: 0;
        }

        inicio
        /* Info template */
        .k-notification-info.k-group {
            background: rgba(0%,0%,0%,.7);
            color: #fff;
        }

        .new-mail {
            width: 300px;
            height: 100px;
        }

            .new-mail h3 {
                font-size: 1em;
                padding: 32px 10px 5px;
            }

            .new-mail img {
                float: left;
                margin: 30px 15px 30px 30px;
            }

        /* Error template */
        .k-notification-error.k-group {
            background: rgba(100%,0%,0%,.7);
            color: #ffffff;
        }

        .wrong-pass {
            width: 300px;
            height: 100px;
        }

            .wrong-pass h3 {
                font-size: 1em;
                padding: 32px 10px 5px;
            }

            .wrong-pass img {
                float: left;
                margin: 30px 15px 30px 30px;
            }

        /* Success template */
        .k-notification-upload-success.k-group {
            background: rgba(0%,60%,0%,.7);
            color: #fff;
        }

        .upload-success {
            width: 240px;
            height: 100px;
            padding: 0 30px;
            line-height: 100px;
        }

            .upload-success h3 {
                font-size: 1.7em;
                font-weight: normal;
                display: inline-block;
                vertical-align: middle;
            }

            .upload-success img {
                display: inline-block;
                vertical-align: middle;
                margin-right: 10px;
            }

        /*Fin estilos notificaciones kendo*/
    </style>


    <script src="~/Scripts/inicio.js"></script>
    <!-- END: PAGE SCRIPTS -->
    <!-- Admin Form Popup -->

    <div id="myModal" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div id="modal-box" class="modal-dialog  modal-xl">
            <div class="modal-content" id="modalContent">
            </div>
        </div>
    </div>

    <a href="#" class="btn btn-success mb10 mr5 notification" data-note-style="success">Success</a>
</body>

</html>

